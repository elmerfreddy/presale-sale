.page-header
  %h2
    %small Product
    = @product.name

%dl.dl-horizontal
  %dt.muted Price
  %dd= number_to_currency @product.price
  %dt.muted Updated At
  %dd= l @product.updated_at, format: :long
  %dt.muted Created At
  %dd= l @product.created_at, format: :long

.form-actions
  = link_to 'Edit', edit_product_path(@product), class: 'btn'
  = link_to 'Back', products_path, class: 'btn btn-info'
