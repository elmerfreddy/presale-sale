= link_to "Presale", root_path, :class => 'brand'
%ul.nav
  %li{ class: "#{ controller_name == 'products' ? 'active' : '' }" }
    = link_to 'Products', products_path
  %li{ class: "#{ controller_name == 'stores' ? 'active' : '' }" }
    = link_to 'Stores', stores_path
  %li{ class: "#{ controller_name == 'transactions' ? 'active' : '' }" }
    = link_to 'Transactions', transactions_path
%ul.nav.pull-right
  - if user_signed_in?
    %li
      = link_to('Logout', destroy_user_session_path, :method=>'delete')
  - else
    %li
      = link_to('Login', new_user_session_path)
