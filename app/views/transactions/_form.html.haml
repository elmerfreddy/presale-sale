= simple_form_for @transaction, html: { class: 'form-horizontal' } do |f|
  = display_base_errors @transaction
  .form-inputs
    = f.association :user
    = f.association :store

  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to 'Cancel', transactions_path, :class => 'btn'
